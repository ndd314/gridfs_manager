.container
  %h2
    %span.glyphicon.glyphicon-folder-open
      = @home_folder.name
    >
    = link_to 'New Folder', new_folder_path, class: 'btn btn-primary'
.container
  %ul.list-group
    - @home_folder.sub_folders.each do |folder|
      %li.list-group-item
        %h3
          %span.glyphicon.glyphicon-folder-open
            = link_to folder.name, folder_path(folder)
