%html
  %head
    %title SjsuCmpe295Server
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if notice
      .alert.alert-info
        = notice
    - if alert
      .alert.alert-danger
        = alert

    %nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button"}
            %span.sr-only
              Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand
            GridFS Navigator

    = yield

    .container
      %hr
      %footer
        %p
